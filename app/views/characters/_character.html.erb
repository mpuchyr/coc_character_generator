<div id="<%= dom_id character %>">

  <h1>
    <%= character.first_name %> <%= character.last_name %>
  </h1>

  <h2><%= character.occupation %></h2>

  <strong>Age:</strong>
  <%= character.age %>

  <div class="container text-center">
    
    <div class="row">
      <div class="col">
        <p>
          <strong>Hp:</strong>
          <%= character.hp %>
        </p>
      </div>
      <div class="col">
        <p>
          <strong>Mp:</strong>
          <%= character.mp %>
        </p>
      </div>
      <div class="col">
        <p>
          <strong>Mov:</strong>
          <%= character.mov %>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <p>
          <strong>Str:</strong>
          <%= character.str %>
        </p>
      </div>
      <div class="col">
        <p>
          <strong>Con:</strong>
          <%= character.con %>
        </p>
      </div>
      <div class="col">
        <p>
          <strong>Siz:</strong>
          <%= character.siz %>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <p>
          <strong>Dex:</strong>
          <%= character.dex %>
        </p>
      </div>
      <div class="col">
        <p>
          <strong>App:</strong>
          <%= character.app %>
        </p>
      </div>
      <div class="col">
        <p>
          <strong>Pow:</strong>
          <%= character.pow %>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <p>
          <strong>Edu:</strong>
          <%= character.edu %>
        </p>
      </div>
      <div class="col">
        <p>
          <strong>Luck:</strong>
          <%= character.luck %>
        </p>
      </div>
      <div class="col">
      </div>
    </div>
    <div class="row">
      <p>
        <strong>Damage bonus:</strong>
        <%= character.damage_bonus %>
      </p>
    </div>
  
  </div>


  <p>
    <strong>Pronoun:</strong>
    <%= character.pronoun %>
  </p>



</div>
