<div id="<%= dom_id character %>">

  <h1>
    <%= character.first_name %> <%= character.last_name %> <span class="small-heading-font">(<%= character.read_attribute_before_type_cast('pronoun') %>)</span>
  </h1>

  <h2><%= character.occupation %></h2>

  <h3>
    <strong>Age:</strong>
    <%= character.age %>
  </h3>

  <hr>

  <div class="container text-center">
    <div class="row">
      <div class="col">
        <h4><span class="underlined">Attributes<span></h4>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <p>
          <strong>Hp:</strong>
          <%= character.hp %>
        </p>
      </div>
      <div class="col">
        <p>
          <strong>Mp:</strong>
          <%= character.mp %>
        </p>
      </div>
      <div class="col">
        <p>
          <strong>Mov:</strong>
          <%= character.mov %>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <p>
          <strong>Str:</strong>
          <%= character.str %>
        </p>
      </div>
      <div class="col">
        <p>
          <strong>Con:</strong>
          <%= character.con %>
        </p>
      </div>
      <div class="col">
        <p>
          <strong>Siz:</strong>
          <%= character.siz %>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <p>
          <strong>Dex:</strong>
          <%= character.dex %>
        </p>
      </div>
      <div class="col">
        <p>
          <strong>App:</strong>
          <%= character.app %>
        </p>
      </div>
      <div class="col">
        <p>
          <strong>Pow:</strong>
          <%= character.pow %>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <p>
          <strong>Edu:</strong>
          <%= character.edu %>
        </p>
      </div>
      <div class="col">
        <p>
          <strong>Luck:</strong>
          <%= character.luck %>
        </p>
      </div>
      <div class="col">
        <p>
          <strong>San:</strong>
          <%= character.san %>
        </p>
      </div>
    </div>
    <div class="row">
      <p>
        <strong>Damage bonus:</strong>
        <%= character.damage_bonus %>
      </p>
    </div>

   

    <hr>

    <% def display_specialization(skill_name) %>

      <% if skill_name == "art_craft" && @art_id != nil %>
        <p><%= ArtSpecialization.where(id: @art_id).first.name %></p>
      <% elsif skill_name == "language_other" && @language_id != nil %>
       <p><%= LanguageSpecialization.where(id: @language_id).first.name %></p>
      <% elsif skill_name == "science" && @science_id != nil %>
        <p><%= ScienceSpecialization.where(id: @science_id).first.name %></p>
      <% elsif skill_name == "pilot" && @pilot_id != nil %>
        <p><%= PilotSpecialization.where(id: @pilot_id).first.name %></p>
      <% elsif skill_name == "survival" && @survival_id != nil %>
        <p><%= SurvivalSpecialization.where(id: @survival_id).first.name %></p>
      <% end %>

    <% end %>

    <% new_row = true %>
    <div class="row">
      <div class="col">  
        <h4><span class="underlined">Skills</span></h4>
      </div>
    </div>
    <% @skill_names.each_with_index do |skill_name, i| %>
      <% if new_row == true %>
        <% new_row = false %>
        <div class="row">
          <div class="offset-md-1 col-md-2">
            <p><%= skill_name.split("_").join(" ") %>: <%= @character.skill[skill_name] %>%</p>
            <% display_specialization(skill_name) %>
          </div>
      <% elsif (i + 1) % 5 == 0 %>
        <% new_row = true %>
          <div class="col-md-2">
            <p><%= skill_name.split("_").join(" ") %>: <%= @character.skill[skill_name] %>%</p>
            <% display_specialization(skill_name) %>
          </div>
        </div>

      <% else %>
        <div class="col-md-2">
          <p><%= skill_name.split("_").join(" ") %>: <%= @character.skill[skill_name] %>%</p>
          <% display_specialization(skill_name) %>
        </div>
      <% end %>
    <% end %>
  </div>

  
  </div>



</div>
